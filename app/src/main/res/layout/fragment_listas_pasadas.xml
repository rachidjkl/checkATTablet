<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    tools:context=".PasarLista.FragmentListasPasadas">

    

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/date_picker_button"
            style="@style/estiloBotonSecundario"
            android:text="27/03/2023"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />

        <Button
            android:id="@+id/refresh"
            style="@style/estiloBotonPrincipal"
            android:text="Refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.977"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <TextView
            android:id="@+id/fechaActual"
            style="@style/estiloTexto"
            android:text="Fecha Actual 27/03/2023"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toEndOf="@+id/date_picker_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101" />

        <TextView
            android:id="@+id/textViewHora"
            style="@style/estiloTexto"
            android:text="Hora"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewListasPasadas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.150"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_picker_button"
            app:layout_constraintVertical_bias="0.744" />

        <TextView
            android:id="@+id/textViewModulo"
            style="@style/estiloTexto"
            android:text="Modulo"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewListasPasadas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.250"
            app:layout_constraintStart_toEndOf="@+id/textViewHora"
            app:layout_constraintTop_toBottomOf="@+id/date_picker_button"
            app:layout_constraintVertical_bias="0.744" />

        <TextView
            android:id="@+id/SeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.085" />

        <TextView
            android:id="@+id/textViewProfesor"
            style="@style/estiloTexto"
            android:text="Profesor"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewListasPasadas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.350"
            app:layout_constraintStart_toEndOf="@+id/textViewModulo"
            app:layout_constraintTop_toBottomOf="@+id/date_picker_button"
            app:layout_constraintVertical_bias="0.744" />

        <TextView
            android:id="@+id/textViewEstado"
            style="@style/estiloTexto"
            android:text="Profesor"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewListasPasadas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintStart_toEndOf="@+id/textViewProfesor"
            app:layout_constraintTop_toBottomOf="@+id/date_picker_button"
            app:layout_constraintVertical_bias="0.744" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewListasPasadas"
            android:layout_width="1000dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.822" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>